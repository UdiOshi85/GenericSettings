<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oshi.genericsettings">

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".kotlin.launcher.MainLauncherActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Main screen -->
        <activity android:name=".kotlin.main.MainActivity" android:screenOrientation="portrait"/>
        <!-- End of Main screen -->

        <!-- Basic types -->
        <activity
            android:name="com.oshi.genericsettings.kotlin.basic.BasicTypeActivity"
            android:screenOrientation="portrait" />
        <!-- End of Basic types -->

        <!-- Checkable types -->
        <activity
            android:name="com.oshi.genericsettings.kotlin.checkable.CheckableSwitchableTypesActivity"
            android:screenOrientation="portrait" />
        <!-- End of Checkable types -->


        <!-- Seekbar types -->
        <activity
            android:name=".kotlin.seekbar.SeekBarTypesActivity"
            android:screenOrientation="portrait" />
        <!-- End of Seekbar types -->

        <activity android:name=".kotlin.debug.checkable.CheckableItemTestActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".kotlin.debug.switchable.SwitchableItemTestActivity"
            android:screenOrientation="portrait"/>


    </application>

</manifest>